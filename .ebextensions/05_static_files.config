files:
  "/etc/nginx/conf.d/elasticbeanstalk/static.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      location /static/ {
        alias /var/app/current/staticfiles/;
        expires 30d;
        add_header Cache-Control "public, immutable";
      }
      
      location /media/ {
        alias /var/app/current/media/;
        expires 30d;
        add_header Cache-Control "public, immutable";
      }

container_commands:
  01_reload_nginx:
    command: "nginx -t && systemctl reload nginx"