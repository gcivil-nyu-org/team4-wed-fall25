# WebSocket support configuration for Elastic Beanstalk
# Note: ALB (Application Load Balancer) supports WebSocket connections by default
# This configuration ensures proper timeout settings for long-lived connections

option_settings:
  aws:elasticbeanstalk:environment:proxy:
    ProxyServer: nginx
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: staticfiles
  
  # Increase timeout for WebSocket connections - CORRECT namespace
  aws:elbv2:loadbalancer:
    IdleTimeout: 3600

files:
  "/etc/nginx/conf.d/websocket.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      # WebSocket support
      proxy_http_version 1.1;
      proxy_set_header Upgrade $http_upgrade;
      proxy_set_header Connection "upgrade";
      
      # Timeout settings for long-lived connections
      proxy_read_timeout 3600s;
      proxy_send_timeout 3600s;
      proxy_connect_timeout 3600s;
      
      # Keep-alive
      keepalive_timeout 3600s;