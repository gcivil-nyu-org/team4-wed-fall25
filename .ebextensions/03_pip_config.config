commands:
  01_cleanup_tmp_before_deploy:
    command: "find /tmp -type f -name '*.whl' -delete && find /tmp -type f -name '*.tar.gz' -delete && find /tmp -type d -name 'pip-*' -exec rm -rf {} + 2>/dev/null || true"

option_settings:
  aws:elasticbeanstalk:application:environment:
    PIP_NO_CACHE_DIR: "1"